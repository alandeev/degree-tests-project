{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "rootDir": "./src",
    "esModuleInterop": true             
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".build",
    ".serverless"
  ]
}